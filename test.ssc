struct Point(x: Number, y: Number) {
    fun translate(x: Number, y: Number) {
        this.x = this.x + x
        this.y = this.y + y
    }

    fun makeTall() {
        if (x > y) {
            x swapWith y
        }
        this
    }

    fun scale(factor: Number) {
        x = x * factor
        y = y * factor
    }

    operator fun scaled(factor: Number) {
        Point(x * factor, y * factor)
    }
}

